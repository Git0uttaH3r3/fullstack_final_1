<h1>Invoice</h1>
<p>Customer: <%= @customer.name %></p>
<p>Address: <%= @customer.address %></p>
<p>Email: <%= @customer.email %></p>

<table>
  <thead>
    <tr>
      <th>Lego Set</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Subtotal</th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |item| %>
      <tr>
        <td><%= item[:lego_set].title %></td>
        <td><%= number_to_currency(item[:lego_set].price) %></td>
        <td><%= item[:quantity] %></td>
        <td><%= number_to_currency(item[:lego_set].price * item[:quantity]) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>Total Taxes: <%= number_to_currency(@taxes) %></p>
<p>Total Price: <%= number_to_currency(@total_price) %></p>
